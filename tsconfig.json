{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	}
}
