{
	"include": ["**/*.ts", "**/*.tsx", "./app/static/js/setup-tests.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"types": ["vitest/globals"]
	}
}
